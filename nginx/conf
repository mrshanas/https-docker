server {
    listen 80;

    listen [::]:80;

    server_name test.mrshanas.com;
    server_tokens off;


    location /.well-know/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://test.mrshanas.com$request_uri;
    }
}

